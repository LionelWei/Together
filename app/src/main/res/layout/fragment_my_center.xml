    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.component.mycenter.MyCenterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/btn_go_to_info"
                layout="@layout/my_center_profile_brief" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>
